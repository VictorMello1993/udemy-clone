{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 120,
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ],
    "no-useless-constructor": "off",
    "no-empty-function": "off",
    "no-redeclare": "off"
  }
}
